<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <!-- MAIN VIEWS -->
    <style name="AppToolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="MainScreenFragmentsParent">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>
    <style name="MainScreenFragmentContainer">
    </style>


    <style name="PopularMoviesFragment">
        <item name="android:background">@color/ColorBackground</item>
    </style>
    <style name="MovieDetailTextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/ColorTextDark</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="MovieDetailTextViewLabel">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/ColorTextDarkLight</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- FRAGMENT POPULAR MOVIES -->
    <style name="PopularMoviesGrid" parent="PopularMoviesFragment">
        <item name="android:numColumns">4</item>
        <item name="android:stretchMode">columnWidth</item>
        <!--<item name="android:columnWidth">90dp</item>-->
    </style>
    <style name="ListItemMoviesGridImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ListItemMoviesGridImageTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/ColorBackgroundMovieTitle</item>
    </style>

    <!-- FRAGMENT MOVIE DETAIL -->
    <style name="MovieDetailsScroll">
        <!--<item name="android:layout_marginTop">@dimen/detail_backdrop_height</item>-->
    </style>
    <style name="MovieDetailsMain">
        <item name="android:layout_marginLeft">25dp</item>
    </style>
    <style name="MovieDetails">
    </style>
    <style name="MovieDetailsCover">
        <!--<item name="android:scaleType">fitCenter</item>-->
    </style>
    <style name="MovieDetailsDescription">
    </style>
    <style name="MovieDetailsTitleLabel" parent="MovieDetailTextViewLabel">
        <item name="android:text">@string/TitleLabel</item>
    </style>
    <style name="MovieDetailsTitle" parent="MovieDetailTextView"></style>
    <style name="MovieDetailsReleaseDateLabel" parent="MovieDetailTextViewLabel">
        <item name="android:text">@string/ReleaseDateLabel</item>
    </style>
    <style name="MovieDetailsReleaseDate" parent="MovieDetailTextView"></style>
    <style name="MovieDetailsVoteAverageLabel" parent="MovieDetailTextViewLabel">
        <item name="android:text">@string/VoteAverageLabel</item>
    </style>
    <style name="MovieDetailsVoteAverage" parent="MovieDetailTextView"></style>
    <style name="MovieDetailsOverviewLabel" parent="MovieDetailTextViewLabel">
        <item name="android:text">@string/OverviewLabel</item>
    </style>
    <style name="MovieDetailsFavoriteButtonMovieDetails">
    </style>
    <style name="MovieDetailsFavouriteButton">
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="MovieDetailsOverview" parent="MovieDetailTextView"></style>

    <style name="MovieDetailsReviewsHeader">
        <item name="android:text">@string/MovieDetailsReviewsHeader</item>
        <item name="android:padding">@dimen/MovieDetailsReviewsHeaderPadding</item>
    </style>
    <style name="MovieDetailsReviews"></style>
    <style name="MovieDetailsReviewsItem"></style>
    <style name="MovieDetailsReviewsAuthor">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MovieDetailsReviewsContent"></style>

    <style name="MovieDetailsTrailersHeader">
        <item name="android:text">@string/MovieDetailsTrailersHeader</item>
        <item name="android:padding">@dimen/MovieDetailsTrailersHeaderPadding</item>
    </style>
    <style name="MovieDetailsTrailers"></style>
    <style name="MovieDetailsTrailersItem">
        <item name="android:paddingTop">@dimen/list_trailer_divider_height</item>
        <item name="android:paddingBottom">@dimen/list_trailer_divider_height</item>
    </style>
    <style name="MovieDetailsTrailersName">
        <item name="android:layout_marginLeft">@dimen/MovieDetails.Trailers.Name</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="MovieDetailsTrailersIcon">
        <item name="android:src">@mipmap/app_play_arrow</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MovieDetailsScroll"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/MovieDetailsMain"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/MovieDetails"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/movieDetailsCover"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/MovieDetailsCoverHeight"
                        style="@style/MovieDetailsCover"
                        />

                    <ImageView
                        android:id="@+id/movieDetailsFavouriteButton"
                        android:src="@mipmap/app_favourite_movie_unmarked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/MovieDetailsDescription"
                    >

                    <TextView
                        android:id="@+id/movieDetailsTitleLabel"
                        style="@style/MovieDetailsTitleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/movieDetailsTitle"
                        style="@style/MovieDetailsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/movieDetailsReleaseDateLabel"
                        style="@style/MovieDetailsReleaseDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/movieDetailsReleaseDate"
                        style="@style/MovieDetailsReleaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/movieDetailsVoteAverageLabel"
                        style="@style/MovieDetailsVoteAverageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/movieDetailsVoteAverage"
                        style="@style/MovieDetailsVoteAverage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/movieDetailsOverviewLabel"
                        style="@style/MovieDetailsOverviewLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/movieDetailsOverview"
                        style="@style/MovieDetailsOverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/MovieDetailsReviewsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_movie_detail_divider_height"
                android:background="@color/ColorDividerLight"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/movieDetailsReviews"
                style="@style/MovieDetailsReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/MovieDetailsTrailersHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_movie_detail_divider_height"
                android:background="@color/ColorDividerLight"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/movieDetailsTrailers"
                style="@style/MovieDetailsTrailers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>